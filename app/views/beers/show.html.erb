<h2 class='text-center'><%= @beer.name %></h2>
<h3 class='text-center'>By: <%= @beer.brewery %></h2>

<hr>
<br>
<div id="beer_info">

  <% label = @beer.label %>

  <% if label == nil %>
    <%= image_tag("no-label.png", width:"150", height:"150") %> 
  <% else %>
    <%= image_tag(label, width:"150", height:"150") %> 
  <% end %>


  	<h4>Description:</h4>
  	<p><%= @beer.description %></p>

      style: <%= @beer.style %><br>
      abv: <%= @beer.abv %><br>
      srm: <%= @beer.srm %><br>
      ibu: <%= @beer.ibu %>

  	<h4>Reviews:</h4>
    <% if user_signed_in? %>
      <% if Review.create_review(@beer.api_id, current_user.id) %>
        <%= "Your Review: #{Review.get_current_user_review(@beer.api_id, current_user.id)}" %>
      <% else %>
          <%= link_to "Add a review for this beer", new_beer_review_path(Beer.find_by(api_id: @beer.api_id)['id']) %> 
          <br>  
      <% end %>
    <% else %>
      <%= link_to("Sign in to leave a Review", new_user_session_path) %>
      <br>
    <% end %>
  	

    <% if @beer.reviews.length > 0 %> 
      <% @beer.reviews.each do |review| %>
      	<p>By: <%= User.find(review.user_id)["first_name"] %>
          <br><%= review.body %>
          <br>Last Updated: <%= review.updated_at %></p>
      <% end %>
  	<% else %>
      <%= "No Reviews Yet" %>
    <% end %>
</div>